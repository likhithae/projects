<%- include('partials/header') %>

  <div class="container mb-5 mt-5 property-list">
    <div class="p-5 bg-light rounded-3">
        <a href="/properties/new" class="btn btn-primary btn-lg" type="button">List a property</a>
    </div>

    <div class="row">
      <% properties.forEach(function(property){ %>
        <div class="col col-md-3 d-flex mb-3 align-items-stretch">
          <div class="card" style="width: 18rem;">
            <img src="./<%= property.photo %>" class="img-wrapper" alt="Property <%= property.id %>">
            <div class="card-body">
              <h5 class="card-title">
                <%= property.title %>
                <!--
                  <a href="/favourite/<%=property._id%>" class="like-button " title="Like Button">
                    <% if (property.favourite) { %>
                      <i class="fa fa-heart property-fee"></i>
                      <%} else { %>
                        <i class="fa fa-heart-o property-fee"></i>
                        <% } %>
    
                      </a>-->
              </h5>
              <h6>
                <%= property.city %>, <%=property.location.state%>
              </h6>
    
              <p class="room-description">
                <%= property.bedrooms %> bedroom &bull; <%= property.beds %> beds
              </p>
    
              <span>
                <link rel="stylesheet"
                  href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" />
                <% for(var i=0; i < (property.rating/property.num_rating); i++) { %>
                  <span class="fa fa-star checked"></span>
                  <% } %>
              </span>
              <span class="property-fee">
                <%=property.nightly_fee %>/night
              </span><br /><br />
              <div>
                <span>
                  <%=property.description%>
                </span>
              </div>
              <br>
              <a href="<%=user%>/properties/<%= property._id %>" class="btn btn-primary">Show details</a>
            </div>
          </div>
        </div>
    
        <% }); %>
    
    </div>
  </div>

    <%- include('partials/footer') %>
