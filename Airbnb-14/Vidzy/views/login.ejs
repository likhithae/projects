<%- include('partials/header') %>

  <div class="container mb-5 mt-5 p-5">
    <div class="container h-100">
      <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col-lg-12 col-xl-11">
          <div class="card text-black" style="border-radius: 25px;">
            <div class="card-body p-md-5">
              <div class="row justify-content-center">
                <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">
                    
                    <%if (message & message=='1' ){%>
                        <div class="alert alert-danger">User does not exist &nbsp; <a
                            href="'/register">Register Here</a>
                        </div>
                        <%}%>
                          <%if (message & message=='2' ){%>
                            <div class="alert alert-warning">All fields are required.
                            </div>
                            <%}%>
                              <%if (message & message=='3' ){%>
                                <div class="alert alert-danger">User email or password is incorrect
                                </div>
                                <%}%>
                                <%if (message & message=='4' ){%>
                                  <div class="alert alert-danger">Please login
                                  </div>
                                  <%}%>

                                
                  <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Login</p>

                  <form class="mx-1 mx-md-4" action="/login" method="POST">

                    <div class="d-flex flex-row align-items-center mb-4">
                      <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                      <div class="form-outline flex-fill mb-0">
                        <input type="email" id="email_id" name="email_id" class="form-control" required>
                        <label class="form-label" for="email_id">Email  <span style="color:red"> * </span></label>
                      </div>
                    </div>

                    <div class="d-flex flex-row align-items-center mb-4">
                      <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                      <div class="form-outline flex-fill mb-0">
                        <input type="password" id="password" name="password" class="form-control" required>
                        <label class="form-label" for="password">Password  <span style="color:red"> * </span></label>
                      </div>
                    </div>

                    <div class="form-check d-flex justify-content-center mb-5">
                     New to Cozy Crib?&nbsp; <a href="/register">Register</a>
                    </div>

                    <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                      <button type="submit" class="btn btn-primary btn-lg">Login</button>
                    </div>

                  </form>

                </div>
                <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">

                  <img src="/images/register.jpeg"
                    class="img-fluid" alt="Sample image">
                  <!--src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/draw1.webp"-->
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

  </div>


  <%- include('partials/footer') %>